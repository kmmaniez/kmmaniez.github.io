<script>
    window.onload = function(){
        const body = document.getElementsByTagName('body')[0];
        const audio =  document.getElementsByTagName('audio')[0];
        body.addEventListener('click', () => {
            body.classList.add('active')
            audio.autoplay = true;
            audio.currentTime = 167;
        })
    }
